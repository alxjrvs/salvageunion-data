{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "apCost": {
      "anyOf": [{ "type": "number" }, { "enum": ["Variable"] }]
    },
    "damage": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "type": { "enum": ["HP", "SP"] },
            "amount": { "type": "number" }
          }
        },
        { "enum": ["2d20", "X SP"] }
      ]
    },
    "traits": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "enum": ["uses", "explosive", "burn", "hot", "multi-attack"]
              },
              "amount": { "type": "number" }
            }
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "enum": [
                  "pilot equipment",
                  "hacking",
                  "melee",
                  "armor",
                  "rigging",
                  "ballistic",
                  "unwieldy",
                  "silent",
                  "communicator",
                  "salvaging",
                  "energy",
                  "heavy",
                  "shield",
                  "hover",
                  "anti-organic",
                  "overheat",
                  "climbing",
                  "missile",
                  "deadly",
                  "flashy",
                  "scanner",
                  "heat spike",
                  "optics",
                  "targeter",
                  "hot (x)",
                  "guided",
                  "jamming",
                  "pinning",
                  "escape",
                  "wield",
                  "anti-shielding",
                  "ion",
                  "amphibious",
                  "explosive (1d20)",
                  "heat hpike",
                  "hot (1d20)"
                ]
              }
            }
          }
        ]
      }
    },
    "rollTable": {
      "type": "object",
      "properties": {
        "1": { "type": "string" },
        "20": { "type": "string" },
        "11-19": { "type": "string" },
        "6-10": { "type": "string" },
        "2-5": { "type": "string" }
      }
    }
  }
}
