{
  "$id": "https://salvage-union.com/abilities.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "abilities",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "tree": {"$ref": "common.schema.json#/definitions/tree"},
      "level": {
        "type": "number"
      },
      "description": {
        "type": "string"
      },
      "effect": {
        "type": "string"
      },
      "apCost": {
        "anyOf": [
          { "type": "number" },
          { "enum": ["Variable"] }
        ]
      },
      "range": {
        "enum": ["Close", "Medium", "Long", "Far"]
      },
      "actionType": {
        "enum": [
          "Passive",
          "Free",
          "Reaction",
          "Turn",
          "Short",
          "Long",
          "DownTime"
        ]
      },
      "traits": {
        "type": "array",
        "items": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "type": { "enum": ["uses"] },
                "amount": { "type": "number" }
              }
            },
            {
              "type": "object",
              "properties": {
                "type": { "enum": ["pilot equipment", "hacking", "melee", "armor"] }
              }
            }
          ]
        }
      }
    }
  }
}
