{
  "$id": "https://salvage-union.com/person.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "abilities",
  "type": "array",
  "items": {
    "properties": {
      "name": {
        "type": "string"
      },
      "tree": {
        "type": "string"
      },
      "level": {
        "type": "number"
      },
      "description": {
        "type": "string"
      },
      "effect": {
        "type": "string"
      },
      "apCost": {
        "anyOf": [
          { "type": "number" },
          { "enum": ["Variable", "Pilot Equipment", "Burn Action"] }
        ]
      },
      "usage": {
        "type": "string"
      },
      "range": {
        "enum": ["Close", "Medium", "Long", "Far"]
      }
    }
  }
}
